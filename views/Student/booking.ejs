<html lang = "en">
    <head>
        <meta charset = "UTF-8">
        <meta name = "viewport" content = "width=device-width, initial-scale=1.0">
        <title>Student Portal</title>
        <link rel = "stylesheet" href = "/css/styles3.css">
        <link rel = "stylesheet" href = "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    </head>
    <body>
        <header>
            <nav class = "navbar">
                <div class = "navbar-left">
                    <img id = "userIcon" src = "/images/profilePic/pic.png" alt = "User Icon" class = "navbar-photo">
                    <input type = "file" id = "uploadPhoto" accept = "image/*">
                </div>
                <ul>
                    <li><a href = "home"><i class = "fas fa-home"></i> Home</a></li>
                    <li><a href = "profile"><i class = "fas fa-user"></i> Profile</a></li>
                    <li><a href = "bookings"><i class = "fas fa-calendar-alt"></i> My Bookings</a></li>
                    <li><a href = "login"><i class = "fas fa-sign-in-alt"></i> Login</a></li>
                </ul>
            </nav>
        </header>
        </div class = "container">
            <div class = "dashboard">
                <div class="profile">
                    <h3>Booking ID: <%= booking.booking_id%></h3>
                    <h4>Student Number: <%= booking.student_num%></h4>
                    <h4>Room Number: <%= booking.booking_location%></h4>
                    <h4>Booking Date: <%= booking.booking_date%></h4>
                    <h4>Booking Start Time: <%= booking.booking_start%></h4>
                    <h4>Booking End Time: <%= booking.booking_end%></h4>
                    <h4>Booking Details: <%= booking.booking_details%></h4>
                </div>
            </div>
        </div>
</html>