<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecturer Portal</title>
    <link rel="stylesheet" href="/css/styles2.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <%- include('./partials/lecNav.ejs') %>
    <section id = "services">
        <section class="features">
            <h2>What We Offer</h2>
            <h2></h2>
            <h2>Welcome Lecturer!!!</h2>
            <div class="feature-grid">
                <div class="feature-item">
                    <img src="/images/lecture.png" alt="Teacher">
                    <h3>Your Profile</h3>
                    <p>Lecturer No.: <%= lecturer.lecturer_num%></p>
                    <p><%= lecturer.lecturer_firstname%> <%= lecturer.lecturer_lastname%><p>
                    <p>Email: <%= lecturer.user_email%></p>
                    <button class="button-teacher" onclick="window.location.href='profile.html'">Edit Profile</button>
                </div>
                <div class="feature-item">
                    <img src="/images/contract.png" alt="summary">
                    <h3>Summary</h3>
                    <p>Upcoming Lectures: <strong>3</strong></p>
                    <p>Total Bookings: <strong>10</strong></p>
                </div>
                <div class="feature-item">
                    <img src="/images/notification.png" alt="notification">
                    <h3>Notifications</h3>
                    
                    <p>Lecture rescheduled for next week.</p>
                    <p>New course available for booking.</p>
                </div>
            </div>
        </section>
    </section>
    <div class="main-content1">
        <div class="container1">
            <h2>Bookings</h2>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Type</th>
                            <th>Date</th>
                            <th>Start</th>
                            <th>End</th>
                            <th>Location</th>
                            <th>Details</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < bookings.length; i++){ %>
                            <tr>
                                <td><%= bookings[i].booking_id %></td>
                                <td><%= bookings[i].booking_type %></td>
                                <td><%= bookings[i].booking_date %></td>
                                <td><%= bookings[i].booking_start %></td>
                                <td><%= bookings[i].booking_end %></td>
                                <td><%= bookings[i].booking_location %></td>
                                <td><%= bookings[i].booking_details %></td>
                                <td>
                                    <form action="booking" method="post">
                                        <input type="hidden" name="id" value="<%= bookings[i].booking_id %>">
                                        <button type="submit">View</button>
                                    </form>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <footer>
        <p>&copy; 2024 Student Portal</p>
    </footer>
</body>
</html>