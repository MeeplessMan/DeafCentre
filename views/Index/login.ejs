<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Your Role</title>
    <link rel="stylesheet" href="/css/styles2.css">
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }
        .container {
            width: 100%;
            max-width: 600px;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            text-align: center;
            position: relative;
            padding-top: 80px;
        }
        .container h2 {
            font-size: 24px;
            color: #333;
            margin-bottom: 40px;
            letter-spacing: 1px;
        }
        .button {
            padding: 15px 30px;
            margin: 10px;
            font-size: 18px;
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }
        .button:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
        .button-teacher {
            background-color: #007bff;
        }
        .button-student {
            background-color: #28a745;
        }
        .button-interpreter {
            background-color: #17a2b8;
        }
    </style>
</head>
<body>
    <%- include('partials/nav') %>
    <section id="hero">
        <div class="overlay"></div>
        <div class="main-content">
            <div class="container">
                <h2>Select Your Role</h2>
                <button class="button button-teacher" onclick="window.location.href='/lecturer/login'">Lecturer</button>
                <button class="button button-student" onclick="window.location.href='/student/login'">Student</button>
                <button class="button button-interpreter" onclick="window.location.href='/interpreter/login'">Interpreter</button>
            </div>
        </div>
    </section>
</body>
<script>
    const images = [
            '/images/DUT.png',
            '/images/_ASL for “LOVE” - fingerspelling_ Sticker for Sale by Jennaviveart.jpeg',
            '/images/Disability-DSC00483.jpg',
            '/images/DUT-Deaf-Centre.jpg'
        ];

    let currentIndex = 0;
    function changeBackground() {
        const heroSection = document.getElementById('hero');

        // Change the background image
        heroSection.style.backgroundImage = `url(${images[currentIndex]})`;

        // Update the index, and loop back to the first image if needed
        currentIndex = (currentIndex + 1) % images.length;
    }
    setInterval(changeBackground, 5000);
    // Start with the first background image
    changeBackground();
</script>
</html>
